<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'} ) do |f| %>
        <fieldset>
          <legend><%= t('devise.views.registrations.new.title') %></legend>
          <div class="row row-grid">
            <div class="span8 offset2">
              <%= print_error_messages resource %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :email, :class => 'control-label'  %>
            <div class="controls">
              <%= f.email_field :email, :class => 'input- large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :nickname, :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :nickname, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password, :class => 'control-label'  %>
            <div class="controls">
              <%= f.password_field :password, :class => 'input-large' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :password_confirmation, :class => 'control-label'  %>
            <div class="controls">
              <%= f.password_field :password_confirmation, :class => 'input-large' %>
            </div>
          </div>
          <div class="form-actions" >
            <%= f.submit t('devise.views.registrations.new.submit'), :class => 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
